<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".PullsActivity">


    <EditText
            android:id="@+id/etOwnerName"
            android:inputType="text"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textSlash"
            app:layout_constraintHorizontal_weight="0.48"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/textSlash"
            android:text="@string/slash"
            app:layout_constraintLeft_toRightOf="@id/etOwnerName"
            app:layout_constraintRight_toLeftOf="@id/etRepoName"
            app:layout_constraintHorizontal_weight="0.04"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layoutLoader"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/etRepoName"
            android:inputType="text"
            app:layout_constraintHorizontal_weight="0.48"
            app:layout_constraintLeft_toRightOf="@id/textSlash"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <android.support.v4.widget.SwipeRefreshLayout
            app:layout_constraintTop_toBottomOf="@id/etOwnerName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/layoutLoader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvPulls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </android.support.v4.widget.SwipeRefreshLayout>


</android.support.constraint.ConstraintLayout>