<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_margin="@dimen/grid_2">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageAvatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_launcher_background"/>

    <TextView
            android:id="@+id/textPullTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLines="1"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/grid_2"
            app:layout_constraintBottom_toTopOf="@id/textPullDesc"
            app:layout_constraintLeft_toRightOf="@id/imageAvatar"
            tools:text="Some big fancy pull request title"/>

    <TextView
            android:id="@+id/textPullDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_2"
            android:layout_marginLeft="@dimen/grid_2"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/textPullTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageAvatar"
            tools:text="#54 some_user wants to merge feature to master"/>

</android.support.constraint.ConstraintLayout>